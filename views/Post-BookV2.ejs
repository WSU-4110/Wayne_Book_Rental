<!DOCTYPE html>
<html>
<head>
<meta charset ="utf-8">
<title>Post-Book Wayne Rental</title>                          <!-- title of the website -->
<link href = "http://fonts.googleapis.com/css?family=Marko+One" rel="stylesheet" type='text/css'>
<link rel="stylesheet" href="Post_book.css">
    
    
</head>
    <div class="topnav">
            <a href="/feed">Home</a>
            <a class="active" href="/post">Rental Form</a>
            <a  href="Profile.html">Profile</a>
            <div class="topnav-right">
                <a href="/logout">Logout</a>
            </div>
    </div>
<body>
    
<form action="/update" method="POST" enctype="multipart/form-data">
<div class="imgcontainer">
    <img src="images/wayne.JPG" alt="Avatar" class="avatar">
  </div>
  
   <div class="container"> 
    <h1 style="text-align: center;">Post</h1>
    <p style="text-align: center;">Please fill in this form to list a new book.</p>
    <hr>
    <% book.forEach(function (PostBook){ %>
    <label for="Title"><b>Title:</b></label>
    <input type="text" placeholder="Enter book title" name="title" value="<%= PostBook.Title %>" required>

    <label for="Author first name"><b>Author first name:</b></label>
    <input type="text" placeholder="Enter author first name" name="fname" value="<%= PostBook.FName %>" required>
	
	<label for="Author last name"><b>Author last name:</b></label>
    <input type="text" placeholder="Enter author last name" name="lname" value="<%= PostBook.LName %>" required>

    <label for="Publisher"><b>Publisher:</b></label>
    <input type="text" placeholder="Enter publisher" name="Publisher" value="<%= PostBook.Publisher %>" required>

    <label for="Book edition"><b>Book edition:</b></label>
    <input type="text" placeholder="Enter the book edition (1st, 2nd, 3rd...)" name="edition" value="<%= PostBook.Edition %>" required>

    <label for="Book subject"><b>Book subject:</b></label>
    <input type="text" placeholder="Enter book subject" name="Subject" value="<%= PostBook.Subject %>" required>
	
	<label for="Condition"><b>Book condition:</b></label>
	<select name="condition" id="condition" required>
		<option value="New">New</option>
		<option value="Like New">Like New</option>
		<option value="Used">Used</option>
	</select>
	
	<br> <br>
	
    <label for="ISBN"><b>ISBN:</b></label>
    <input type="text" placeholder="Enter ISBN" name="ISBN" value="<%= PostBook.Isbn %>" required>
	
    <label for="img"><b>Select image:</b></label>
    <input type="file" id="img" name="img" value="<%= PostBook.Imag %>" accept="image/*">  

	<br><br>
	<label for="Rent Price"><b>Rent Price $</b></label>
    <input type="number" min=1 step="any" placeholder="Enter price for rent" name="Price" value="<%= PostBook.Price %>" required>
	
	<br> <br>
	
	<label for="desc"><b>Enter description:</b></label>
	<textarea name="message" placeholder="Enter a description of the book" 
	name="Description" rows="10" cols="35" value="<%= PostBook.Description %>" required></textarea>
	<br><br>

    <div class="clearfix">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </div>
  <% }) %>
</form>

<footer class ="PostFooter">
