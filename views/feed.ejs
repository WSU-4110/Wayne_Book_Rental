<script>
    function checkBalance(price){
        
        if (Number("<%= user.Wallet %>") < price){
        
            alert("You dont have enough balance to rent this book, please use Paypal instead!");
            window.location("#");
        }
        else{
            document.getElementById("Walletform").submit();
